{
    "editor.formatOnSave": true,
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nixd",
    "nix.hiddenLanguageServerErrors": [
        "textDocument/definition",
    ],
    "nix.serverSettings": {
        "nil": {
            "formatting": {
                "command": [
                    "alejandra"
                ],
            },
        },
        "nixd": {
            "formatting": {
                "command": [
                    "alejandra"
                ],
            },
            "nixpkgs": {
                "expr": "import <nixpkgs> {}"
            },
            "options": {
                "nixos": {
                    "expr": "(builtins.getFlake \"${workspaceFolder}\").nixosConfigurations.heliosdesk.options",
                },
                "home-manager": {
                    "expr": "(builtins.getFlake \"${workspaceFolder}\").nixosConfigurations.heliosdesk.options.home-manager.users.type.getSubOptions []"
                }
            }
        }
    }
}